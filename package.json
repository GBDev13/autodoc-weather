{
  "name": "vite-typescript-boilerplate",
  "version": "1.0.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "lint": "eslint --max-warnings=0",
    "lint:next": "next lint",
    "test": "NODE_ENV=test && jest -i --silent",
    "test:watch": "jest --maxWorkers=25% --watchAll",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "prettier": "prettier --write '**/*.{ts,tsx,json,md}'",
    "prettier:check": "prettier -c '**/*.{ts,tsx,json,md}'"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint --fix",
      "yarn prettier --write",
      "yarn jest --findRelatedTests --bail"
    ],
    "*.js": "eslint --cache --fix"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.0",
    "@reduxjs/toolkit": "^1.8.4",
    "axios": "^0.27.2",
    "firebase": "^9.9.2",
    "polished": "^4.2.2",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-icons": "^4.4.0",
    "react-redux": "^8.0.2",
    "styled-components": "5.3.5",
    "usehooks-ts": "^2.6.0"
  },
  "devDependencies": {
    "@babel/core": "7.17.10",
    "@babel/plugin-proposal-class-properties": "7.16.7",
    "@babel/plugin-proposal-private-methods": "7.16.11",
    "@babel/plugin-proposal-private-property-in-object": "7.16.7",
    "@babel/plugin-transform-react-jsx": "7.17.3",
    "@babel/preset-typescript": "7.16.7",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "13.2.0",
    "@testing-library/react-hooks": "8.0.0",
    "@testing-library/user-event": "14.1.1",
    "@types/react": "18.0.8",
    "@types/react-dom": "18.0.3",
    "@types/styled-components": "5.1.25",
    "@typescript-eslint/eslint-plugin": "4.31.0",
    "@typescript-eslint/parser": "4.31.0",
    "@vitejs/plugin-react": "1.3.2",
    "axios-mock-adapter": "^1.21.2",
    "babel": "6.23.0",
    "babel-loader": "8.2.5",
    "babel-plugin-styled-components": "2.0.7",
    "babel-plugin-transform-vite-meta-env": "1.0.3",
    "babel-preset-react-app": "10.0.1",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-react": "7.25.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "from": "^0.1.7",
    "jest": "28.0.3",
    "jest-environment-jsdom": "28.0.2",
    "jest-styled-components": "7.0.8",
    "lint-staged": "11.1.2",
    "msw": "^0.44.2",
    "prettier": "2.4.0",
    "typescript": "4.6.4",
    "vite": "2.9.8",
    "vite-tsconfig-paths": "3.4.1"
  }
}
